# EventChain Environment Configuration
# Copy this file to .env and fill in your actual values

# =====================================
# General Configuration
# =====================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="EventChain"
NEXT_PUBLIC_APP_DESCRIPTION="Next-generation Web3 event management platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =====================================
# Blockchain Configuration
# =====================================

# Alchemy API Keys (get from https://dashboard.alchemy.com/)
ALCHEMY_API_KEY="your_alchemy_api_key_here"
NEXT_PUBLIC_ALCHEMY_API_KEY="your_alchemy_api_key_here"

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_walletconnect_project_id_here"

# Default Chain ID (80002 = Polygon Amoy testnet, 137 = Polygon mainnet)
NEXT_PUBLIC_CHAIN_ID="80002"

# Private Keys for Deployment (NEVER commit real private keys!)
DEPLOYER_PRIVATE_KEY="0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80"

# =====================================
# Contract Addresses (filled after deployment)
# =====================================
NEXT_PUBLIC_EVENTCHAIN_CONTRACT=""
NEXT_PUBLIC_VERIFIER_CONTRACT=""

# =====================================
# External APIs
# =====================================

# The Graph API URL for indexing events
NEXT_PUBLIC_GRAPH_URL="https://api.studio.thegraph.com/query/your-subgraph-id/eventchain/version/latest"

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY="https://eventchain.infura-ipfs.io/ipfs/"
IPFS_PROJECT_ID="your_ipfs_project_id"
IPFS_PROJECT_SECRET="your_ipfs_project_secret"

# Etherscan API Keys for contract verification
ETHERSCAN_API_KEY="your_etherscan_api_key"
POLYGONSCAN_API_KEY="your_polygonscan_api_key"

# =====================================
# Development Configuration
# =====================================

# Next.js Build Configuration
NEXT_PUBLIC_IGNORE_BUILD_ERROR="false"

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=""
SENTRY_DSN=""

# =====================================
# Optional: Social and Marketing
# =====================================
NEXT_PUBLIC_TWITTER_HANDLE="@eventchain"
NEXT_PUBLIC_DISCORD_INVITE=""
NEXT_PUBLIC_GITHUB_REPO="https://github.com/your-org/eventchain"

# =====================================
# Database (if using external database)
# =====================================
DATABASE_URL="postgresql://user:password@localhost:5432/eventchain"
REDIS_URL="redis://localhost:6379"

# =====================================
# Email Service (for notifications)
# =====================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =====================================
# Notes
# =====================================
# - Never commit .env files to version control
# - Use strong, unique private keys for production
# - Regularly rotate API keys and secrets
# - Consider using a secrets management service for production